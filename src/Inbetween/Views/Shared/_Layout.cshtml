                    @*else if (ViewBag.isAdmin)
                    {<li><a onclick="window.location.href='/admin/addalbum'" href="#AddAlbum">Add Album</a></li>}*@
                    else {<li><a href="#contact">Contact</a></li>}
                    @*@if (ViewBag.isAdmin)
                    {<li><a onclick="window.location.href ='/admin/DeleteAlbum'" href="#DeleteAlbum">Delete Album</a></li>}*@
                </ul>
            </div>
        </div>
    </nav>
