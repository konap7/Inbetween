                    @*else if (ViewBag.isAdmin)
                    {<li><a onclick="window.location.href='/admin/addnews'" href="#AddNews">Add News</a></li>}*@
                    else {<li><a href="#News">News</a></li> }
                    @if (ViewBag.isNotHomeIndex)
